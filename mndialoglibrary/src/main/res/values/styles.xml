<resources>

    <!-- 自定义Dialog -->
    <style name="MNCustomDialog" parent="@android:style/Theme.Dialog">
        <!-- 无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!--无遮罩效果-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <declare-styleable name="MNProgressWheel">
        <attr name="mn_progressIndeterminate" format="boolean" />
        <attr name="mn_barColor" format="color" />
        <attr name="mn_rimColor" format="color" />
        <attr name="mn_rimWidth" format="dimension" />
        <attr name="mn_spinSpeed" format="float" />
        <attr name="mn_barSpinCycleTime" format="integer" />
        <attr name="mn_circleRadius" format="dimension" />
        <attr name="mn_fillRadius" format="boolean" />
        <attr name="mn_barWidth" format="dimension" />
        <attr name="mn_linearProgress" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MNCircularProgressBar">
        <attr name="mn_progress" format="integer" />
        <attr name="mn_progressbar_color" format="color" />
        <attr name="mn_background_progressbar_color" format="color" />
        <attr name="mn_progressbar_width" format="dimension" />
        <attr name="mn_background_progressbar_width" format="dimension" />
    </declare-styleable>

</resources>
